# ============================================
# MARKETING AGENT - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# Required keys are marked with [REQUIRED]
# Optional keys can be left empty or removed
# ============================================

# ============================================
# CORE APPLICATION
# ============================================

# Application Settings
APP_NAME="Marketing Agent"
DEBUG=false
ENVIRONMENT=development  # Options: development, staging, production

# Database Connection [REQUIRED for production]
# Local development uses SQLite by default (no config needed)
# For production, use PostgreSQL:
DATABASE_URL=postgresql://user:password@host:5432/dbname
DATABASE_SSL=true

# JWT Secret Key [REQUIRED]
# SECURITY: Generate a unique key for each environment!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_GENERATE_A_SECURE_KEY

# Application URL (for SAML metadata, OAuth callbacks)
APP_URL=https://your-app-domain.com

# ============================================
# AI SERVICES - CORE [REQUIRED]
# ============================================
# At minimum, you need OpenRouter for LLM access

# OpenRouter - Primary LLM Access (Claude, GPT-4, Gemini, etc.)
# Get your key: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Perplexity - Research & Web Search
# Get your key: https://perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Firecrawl - Web Scraping for Brand Onboarding
# Get your key: https://firecrawl.dev/app/api-keys
FIRECRAWL_API_KEY=fc-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# AI SERVICES - OPTIONAL FEATURES
# ============================================

# Segmind - AI Image Generation
# Get your key: https://www.segmind.com/api-keys
SEGMIND_API_KEY=SG_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ElevenLabs - AI Voice Generation
# Get your key: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=sk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI - Whisper Audio Transcription
# Get your key: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# xAI/Grok - Video Analysis
# Get your key: https://console.x.ai/
XAI_API_KEY=xai-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# AWS / S3 STORAGE [REQUIRED for file uploads]
# ============================================
# Get credentials: https://console.aws.amazon.com/iam/

AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# Optional: For S3-compatible services (MinIO, DigitalOcean Spaces, etc.)
S3_ENDPOINT_URL=

# Optional: CloudFront CDN domain for faster asset delivery
CDN_DOMAIN=

# ============================================
# REAL-TIME SYNC (CONVEX)
# ============================================
# Get credentials: https://dashboard.convex.dev/

CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOY_KEY=prod:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins for production
# Default includes localhost for development

CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_ORIGINS=https://your-production-domain.com

# ============================================
# ENTERPRISE SECURITY & COMPLIANCE
# ============================================

# Data Encryption Key (for encrypting sensitive data at rest)
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
ENCRYPTION_KEY=

# SAML SSO Configuration
SAML_CERTIFICATE=
SAML_PRIVATE_KEY=
SAML_STRICT_MODE=true

# Compliance Flags
GDPR_ENABLED=true
CCPA_ENABLED=true
SOC2_ENABLED=true

# Audit Log Settings
AUDIT_LOG_RETENTION_DAYS=2555

# ============================================
# CRM INTEGRATIONS
# ============================================

# Salesforce OAuth
# Setup: https://login.salesforce.com/ → Setup → Apps → App Manager
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_REDIRECT_URI=https://your-app-domain.com/api/v1/integrations/salesforce/oauth/callback

# HubSpot OAuth
# Setup: https://developers.hubspot.com/ → Apps → Create App
HUBSPOT_CLIENT_ID=
HUBSPOT_CLIENT_SECRET=
HUBSPOT_REDIRECT_URI=https://your-app-domain.com/api/v1/integrations/hubspot/oauth/callback

# Microsoft Dynamics OAuth
# Setup: https://portal.azure.com/ → App Registrations
DYNAMICS_CLIENT_ID=
DYNAMICS_CLIENT_SECRET=

# Webhook Verification Secret
# Generate: python -c "import secrets; print(secrets.token_urlsafe(32))"
WEBHOOK_SECRET=

# ============================================
# DATA WAREHOUSE INTEGRATIONS
# ============================================

# Snowflake
# Setup: https://app.snowflake.com/
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_DATABASE=
SNOWFLAKE_WAREHOUSE=
SNOWFLAKE_SCHEMA=PUBLIC

# Google BigQuery
# Setup: https://console.cloud.google.com/ → BigQuery
BIGQUERY_PROJECT_ID=
BIGQUERY_CREDENTIALS_PATH=

# ============================================
# CDP INTEGRATIONS
# ============================================

# Segment
# Setup: https://app.segment.com/ → Sources → Add Source
SEGMENT_WRITE_KEY=

# mParticle
# Setup: https://app.mparticle.com/ → Setup → Inputs
MPARTICLE_API_KEY=
MPARTICLE_API_SECRET=

# ============================================
# DATA ENRICHMENT SERVICES
# ============================================

# Clearbit - Company & Contact Enrichment
# Get your key: https://dashboard.clearbit.com/
CLEARBIT_API_KEY=sk_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ZeroBounce - Email Verification
# Get your key: https://www.zerobounce.net/
ZEROBOUNCE_API_KEY=

# ============================================
# ADVANCED CONFIGURATION
# ============================================

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Onboarding Settings
ONBOARDING_MAX_PAGES=50
ONBOARDING_TIMEOUT_SECONDS=300

# CDP Settings
CDP_ENABLED=true
CDP_EVENT_RETENTION_DAYS=365
CDP_ANONYMOUS_RETENTION_DAYS=30
CDP_BATCH_SIZE=1000
CDP_ENRICHMENT_ENABLED=true

# Optimization Settings
OPTIMIZATION_ENABLED=true
AUTO_OPTIMIZATION_ENABLED=false
OPTIMIZATION_INTERVAL_MINUTES=60
EXPERIMENT_MIN_SAMPLE_SIZE=100
EXPERIMENT_DEFAULT_CONFIDENCE=0.95

# Sync Settings
DEFAULT_SYNC_BATCH_SIZE=1000
MAX_SYNC_RECORDS_PER_RUN=100000
DEFAULT_SYNC_FREQUENCY=hourly
SYNC_TIMEOUT_SECONDS=3600

# Kafka Event Streaming (Optional)
KAFKA_ENABLED=false
KAFKA_BOOTSTRAP_SERVERS=
KAFKA_EVENTS_TOPIC=customer-events
